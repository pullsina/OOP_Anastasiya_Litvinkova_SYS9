<Window x:Class="CookMasterApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CookMasterApp.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <ScrollViewer>
    <Grid Background="#d6bea4">
        <StackPanel>
            <Label Content="CookMaster"
               FontSize="50"
               FontWeight="ExtraBold"
               Foreground="#ac371e"
               HorizontalAlignment="Center"/>
            <Grid Background="#efe2da" Margin="70,0,70,50">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Label Content="Log In"
                   FontSize="30"
                   FontWeight="ExtraBold"
                   Foreground="#3A464B"
                   HorizontalAlignment="Center"
                   Margin="0, 10, 0, 30"/>
                <StackPanel Grid.Row="1" Margin="15, 0, 0, 10" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <TextBlock Text="USERNAME:"
                               Foreground="#312d2a"                
                               FontSize="20"
                               FontWeight="Medium"
                               Margin="0, 0, 20, 0"/>
                    <TextBox  Width="400" 
                              Text="{Binding Username, 
                              UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Margin="15, 0, 0, 10" 
                            Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <TextBlock Text="PASSWORD:"
                               Foreground="#312d2a"
                               HorizontalAlignment="Left"
                               FontSize="20"
                               FontWeight="Medium"
                               Margin="0, 0, 20, 0"/>
                    <PasswordBox  x:Name="PasswordBox"
                               Width="400" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Row="3" Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Content="Login"
                            Width="100" 
                            Height="30"
                            Margin="10"
                            BorderBrush="#ac371e"
                            FontWeight="ExtraBold"
                            Command="{Binding LoginCommand}"
                            CommandParameter="{Binding ElementName=PasswordBox, 
                            Path=Password}"/>
                    <!--When the user clicks the button,the LoginCommand is executed,
                    and get the PasswordBox.Password value as an argument. -->

                    <Button Content="Register" 
                            Width="100"
                            Height="30"
                            Margin="10"
                            BorderBrush="#ac371e"
                            FontWeight="ExtraBlack"
                            Command="{Binding OpenRegisterCommand}"/>
                </StackPanel>
                <StackPanel Grid.Row="4" Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Content="Forgot password?"
                            Margin="10"
                            Width="150"
                            Height="30"
                            BorderBrush="#ac371e"
                            FontWeight="ExtraBlack"
                            Command="{Binding ForgotPasswordCommand}"/>
                </StackPanel>
                <StackPanel Grid.Row="5" Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock Text="{Binding Message}"
                               Foreground="Red"
                               FontSize="13"
                               FontWeight="Bold"
                               Margin="10"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
    </ScrollViewer>

</Window>
