<Window x:Class="CookMasterApp.Views.RecipeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CookMasterApp.ViewModels"
        mc:Ignorable="d"
        Title="Recipe Details"
        Height="700"
        Width="900"
        Background="#d6bea4">

    <!--<Window.DataContext>
        <vm:RecipeDetailViewModel/>
    </Window.DataContext>-->

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#efe2da" Margin="50">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="Recipe Details"
                   FontSize="40"
                   FontWeight="ExtraBold"
                   Foreground="#ac371e"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="Created by: " FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="{Binding CreatedBy}" FontSize="14" Margin="0,0,10,0"/>
                <TextBlock Text="Date: " FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="{Binding Date, StringFormat={}{0:yyyy-MM-dd}}" FontSize="14"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center">
                <StackPanel Orientation="Vertical" Margin="0,10">
                    <TextBlock Text="Title:" FontSize="18" FontWeight="Bold"/>
                    <TextBox Width="600"
                             Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                             IsReadOnly="{Binding IsReadOnly}"
                             FontSize="16"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,10">
                    <TextBlock Text="Category:" FontSize="18" FontWeight="Bold"/>
                    <TextBox Width="600"
                             Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                             IsReadOnly="{Binding IsReadOnly}"
                             FontSize="16"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,10">
                    <TextBlock Text="Ingredients:" FontSize="18" FontWeight="Bold"/>
                        <TextBox Width="600" Height="120"
                             Text="{Binding Ingredients, UpdateSourceTrigger=PropertyChanged}"
                             IsReadOnly="{Binding IsReadOnly}"
                             AcceptsReturn="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="16"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,10">
                    <TextBlock Text="Instructions:" FontSize="18" FontWeight="Bold"/>
                        <TextBox Width="600" Height="200"
                             Text="{Binding Instructions, UpdateSourceTrigger=PropertyChanged}"
                             IsReadOnly="{Binding IsReadOnly}"
                             AcceptsReturn="True" TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="16"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button Content="Edit"
                        Command="{Binding EditCommand}"
                        Width="100" Margin="10"/>
                <Button Content="Save"
                        Command="{Binding SaveCommand}"
                        Width="100" Margin="10"/>
                <Button Content="Save as New"
                        Command="{Binding CopyCommand}"
                        Width="120" Margin="10"/>
                <Button Content="Back"
                        Command="{Binding BackCommand}"
                        Width="100" Margin="10"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
