<Window x:Class="CookMasterApp.Views.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CookMasterApp.ViewModels"
        mc:Ignorable="d"
        Title="Add Recipe"
        Height="650"
        Width="850"
        Background="#d6bea4">

    <Window.DataContext>
        <vm:AddRecipeViewModel/>
    </Window.DataContext>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Background="#efe2da" Margin="60,20,60,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Titel -->
                <RowDefinition Height="Auto"/>
                <!-- Formulär -->
                <RowDefinition Height="Auto"/>
                <!-- Knappar -->
                <RowDefinition Height="Auto"/>
                <!-- Meddelanden -->
            </Grid.RowDefinitions>

            <!-- Titel -->
            <Label Content="Add New Recipe"
                   FontSize="40"
                   FontWeight="ExtraBold"
                   Foreground="#ac371e"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

            <!-- Formulär -->
            <StackPanel Grid.Row="1"
                        Margin="40,0,40,0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center">

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="Title:" Width="150" FontSize="18" VerticalAlignment="Center" Foreground="#312d2a"/>
                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Width="400" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10">
                    <TextBlock Text="Category:" Width="150" FontSize="18" VerticalAlignment="Center" Foreground="#312d2a"/>
                    <TextBox Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}" Width="400" Height="30"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,10">
                    <TextBlock Text="Ingredients (separate by comma or new line):" FontSize="18" Foreground="#312d2a"/>
                    <TextBox Text="{Binding Ingredients, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             Height="100"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,10">
                    <TextBlock Text="Instructions:" FontSize="18" Foreground="#312d2a"/>
                    <TextBox Text="{Binding Instructions, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True"
                             Height="150"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </StackPanel>

            <!-- Knappar -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,10">
                <Button Content="Save"
                        Command="{Binding SaveCommand}"
                        Width="120"/>
                <Button Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Width="120"/>
            </StackPanel>

            <!-- Meddelanden -->
            <TextBlock Grid.Row="3"
                       Text="{Binding Message}"
                       Foreground="{Binding MessageColor}"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"/>
        </Grid>
    </ScrollViewer>
</Window>
