<Window x:Class="CookMasterApp.Views.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CookMasterApp.ViewModels"
        mc:Ignorable="d"
        Title="Recipe List"
        Height="600"
        Width="900"
        Background="#d6bea4">

    <Window.DataContext>
        <vm:RecipeListViewModel/>
    </Window.DataContext>

    <Grid Background="#efe2da" Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Titel -->
            <RowDefinition Height="Auto"/>
            <!-- Sökfält -->
            <RowDefinition Height="*"/>
            <!-- Lista -->
            <RowDefinition Height="Auto"/>
            <!-- Knappar -->
            <RowDefinition Height="Auto"/>
            <!-- Meddelanden -->
            <RowDefinition Height="Auto"/>
            <!-- Username -->
        </Grid.RowDefinitions>

        <!-- Titel -->
        <Label Content="CookMaster"
                       FontSize="50"
                       FontWeight="ExtraBold"
                       Foreground="#ac371e"
                       HorizontalAlignment="Center"/>

        <!-- Sökfält -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,10">
            <TextBox Width="400"
                     Height="30"
                     FontSize="14"
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     VerticalContentAlignment="Center"
                     ToolTip="Search recipe by name, category, ingredient or date"/>
            <Button Content="Search"
                    Command="{Binding SearchCommand}"/>
            <Button Content="Clear"
                    Command="{Binding ClearSearchCommand}"/>
        </StackPanel>

        <!-- Lista med recept -->
        <ListBox Grid.Row="2"
                 ItemsSource="{Binding Recipes}"
                 SelectedItem="{Binding SelectedRecipe}"
                 DisplayMemberPath="Title"
                 Background="White"
                 BorderBrush="#b89174"
                 BorderThickness="2"
                 Margin="60,0,60,0"
                 FontSize="16"
                 Padding="10"
                 HorizontalContentAlignment="Stretch"/>

        <!-- Knapprad -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <Button Content="Add Recipe"
                    Command="{Binding AddRecipeCommand}" />
            <Button Content="View Recipe"
                    Command="{Binding ViewRecipeCommand}" />
            <Button Content="Remove Recipe"
                    Command="{Binding RemoveRecipeCommand}" />
            <Button Content="User Details"
                    Command="{Binding UserCommand}" />
            <Button Content="Sign Out"
                    Command="{Binding SignOutCommand}" />
            <Button Content="Info"
                    Command="{Binding InfoCommand}" />
        </StackPanel>

        <!-- Meddelanden -->
        <TextBlock Grid.Row="4"
                   Text="{Binding Message}"
                   Foreground="{Binding MessageColor}"
                   FontWeight="Bold"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Margin="0,15,0,0"/>
        <StackPanel Grid.Row="5" HorizontalAlignment="Center" Orientation="Horizontal">
            <TextBlock  Text="User:" FontSize="14" Margin="5"/>
            <TextBlock Text="{Binding CurrentUser.Username}" FontSize="14" Margin="5" FontWeight="Medium"/>
        </StackPanel>
        
    </Grid>
</Window>
