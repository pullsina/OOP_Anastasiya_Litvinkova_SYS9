<Window x:Class="CookMasterApp.Views.UserDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:CookMasterApp.ViewModels"
        mc:Ignorable="d"
        Title="User Details"
        Height="800"
        Width="800">

    <Window.Resources>
        <Style x:Key="RegStackPanel" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="Margin" Value="15,0,0,10"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Foreground" Value="#312d2a"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>

    <Window.DataContext>
        <vm:UserDetailViewModel/>
    </Window.DataContext>

    <ScrollViewer>
        <Grid Background="#d6bea4">
            <StackPanel>
                <!-- HEADER -->
                <Label Content="CookMaster"
                       FontSize="50"
                       FontWeight="ExtraBold"
                       Foreground="#ac371e"
                       HorizontalAlignment="Center"/>

                <Grid Background="#efe2da" Margin="70,0,70,50">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="User Details"
                           FontSize="30"
                           FontWeight="ExtraBold"
                           Foreground="#3A464B"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,30"/>

                    <!-- CURRENT USERNAME -->
                    <StackPanel Grid.Row="1" Style="{StaticResource RegStackPanel}">
                        <TextBlock Text="Username:"/>
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text="{Binding UsernameMessage}"
                                   Foreground="Red"
                                   FontSize="12"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- COUNTRY -->
                    <StackPanel Grid.Row="2" Style="{StaticResource RegStackPanel}">
                        <TextBlock Text="Country:"/>
                        <ComboBox ItemsSource="{Binding Countries}"
                                  SelectedItem="{Binding SelectedCountry}"/>
                        <TextBlock Text="{Binding CountryMessage}"
                                   Foreground="Red"
                                   FontSize="12"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <Separator Grid.Row="3" Margin="0,20,0,20"/>

                    <!-- OLD PASSWORD -->
                    <StackPanel Grid.Row="4" Style="{StaticResource RegStackPanel}">
                        <TextBlock Text="Enter your current password:"/>
                        <PasswordBox x:Name="OldPasswordBox"
                                     PasswordChanged="PasswordBox_OnChanged"/>
                        <TextBlock Text="{Binding OldPasswordMessage}"
                                   Foreground="Red"
                                   FontSize="12"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- NEW PASSWORD -->
                    <StackPanel Grid.Row="5" Style="{StaticResource RegStackPanel}">
                        <TextBlock Text="New password:"/>
                        <PasswordBox x:Name="NewPasswordBox"
                                     PasswordChanged="PasswordBox_OnChanged"/>
                        <TextBlock Text="{Binding PasswordMessage}"
                                   Foreground="Red"
                                   FontSize="12"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- CONFIRM PASSWORD -->
                    <StackPanel Grid.Row="6" Style="{StaticResource RegStackPanel}">
                        <TextBlock Text="Confirm new password:"/>
                        <PasswordBox x:Name="NewPasswordBox2"
                                     PasswordChanged="PasswordBox_OnChanged"/>
                        <TextBlock Text="{Binding ConfirmPasswordMessage}"
                                   Foreground="{Binding ConfirmPasswordColor}"
                                   FontSize="12"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- BUTTONS -->
                    <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <Button Content="Save Changes"
                                Command="{Binding SaveDetailsCommand}"/>
                        <Button Content="Cancel"
                                Command="{Binding BackCommand}"/>
                    </StackPanel>

                    <!-- RESULT MESSAGE -->
                    <StackPanel Grid.Row="8" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock Text="{Binding Message}"
                                   Foreground="{Binding MessageColor}"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="5"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
